    cmd = kitty kitty +kitten diff $LOCAL $REMOTE

[commit]
	gpgsign = true
[tag]
	gpgSign = true
[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
[alias]
	st = status
	co = checkout
	ci = commit -s -S
	br = branch
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lgn = lg -n
